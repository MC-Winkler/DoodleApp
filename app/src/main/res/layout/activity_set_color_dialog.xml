<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.elon.cs.dotpainter.SetColorDialogActivity">

    <SeekBar
        android:id="@+id/redSeekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="255"/>

    <SeekBar
        android:id="@+id/greenSeekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/redSeekBar"
        android:max="255"/>

    <SeekBar
        android:id="@+id/blueSeekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greenSeekBar"
        android:max="255"/>

    <SeekBar
        android:id="@+id/alphaSeekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blueSeekBar"
        android:max="255"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alphaSeekBar"
        android:layout_centerHorizontal="true"
        android:text="@string/on_set_label"
        android:onClick="onSetColorClick"/>

</RelativeLayout>
